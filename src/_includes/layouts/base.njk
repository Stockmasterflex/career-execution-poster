<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ title or (meta.title if meta else "Career Execution Poster") }}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/career-os.css">
  <link rel="stylesheet" href="/styles/poster.css">
  <link rel="stylesheet" href="/styles/print.css" media="print">
</head>
{% set qsSize = page.url | urlSearchParam('size') %}
{% set size = qsSize or print.size %}
{% if size == '12x18' %}
  {% set sizeClass = '12x18' %}
{% else %}
  {% set sizeClass = '24x36' %}
{% endif %}
<body class="poster-page poster--{{ sizeClass }}">
  {{ content | safe }}
</body>
</html>