{# sections/status.njk #}
<section class="panel">
  <h2>Current Status & Foundation</h2>
  <div class="grid" style="grid-template-columns:repeat(2,minmax(0,1fr));gap:.75rem;">
    {% for s in status %}
      <div class="pill"><strong>{{ s.label }}:</strong> {{ s.text }}</div>
    {% endfor %}
  </div>
</section>
